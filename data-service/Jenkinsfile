
pipeline {
    agent any

    tools {
        maven "Maven"
        jdk "openjdk-14"
    }

    stages {
        stage('Maven Install') {
          agent {
            docker {
                image 'maven:3.5.0'
            }
          }
          steps {
            sh 'mvn clean install'
          }
        }
        stage('Docker Build') {
          agent any
              steps {
                sh 'docker build -t kumar/data-service-test:1.0.0 .'
              }
        }
    }
}